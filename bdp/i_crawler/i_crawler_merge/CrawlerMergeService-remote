import pprint
import sys
from urlparse import urlparse

from bdp.i_crawler.i_crawler_merge import CrawlerMergeService
from thrift.transport import THttpClient
from thrift.transport import TSocket

from downloader.i_crawler.i_crawler_merge.ttypes import *

if len(sys.argv) <= 1 or sys.argv[1] == '--help':
  print ''
  print 'Usage: ' + sys.argv[0] + ' [-h host[:port]] [-u url] [-f[ramed]] function [arg1 [arg2...]]'
  print ''
  print 'Functions:'
  print '  LinkAttr merge(PageParseInfo page_parseinfo)'
  print '  RetStatus select(string site, string url_format, i32 limit, i32 start, string extra_filter, string tube_name)'
